@page "/login"
@* @rendermode InteractiveServer *@

<EditForm Model="_model" OnValidSubmit="onValidSubmit" FormName="login">
    <DataAnnotationsValidator />
    <div class="py-4">
        <div class="row form-group">
            <div class="col-lg-6 offset-lg-3 offset-sm-0">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-success text-center py-2">
                            <strong>Login</strong>
                        </h3>

                        <Errors _errors="_errors" />

                        <div class="py-2">
                            <InputText @bind-Value="_model.UserName" id="email" placeholder="UserName..." class="form-control mb-2" />
                            <ValidationMessage For="(()=>_model.UserName)"></ValidationMessage>
                        </div>
                        <div class="py-2">
                            <InputText @bind-Value="_model.Password" type="password" placeholder="Password..." id="password" class="form-control mb-2" />
                            <ValidationMessage For="(()=>_model.Password)"></ValidationMessage>
                        </div>
                        <div class="py-2">
                            @if (_loading)
                            {
                                <p>loading...</p>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-block"><i class="bi bi-person-bounding-box"></i>Login</button>
                                <a href="/register" class="btn btn-primary text-white m-2"><i class="bi bi-person-plus-fill"></i> Register</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>