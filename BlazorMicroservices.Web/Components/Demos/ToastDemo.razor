@page "/toastdemo"
@using BlazorMicroservices.Web.Extentions
@inject IJSRuntime _js
@rendermode InteractiveServer

<PageTitle>toastdemo</PageTitle>

<div class="jumbotron jumbotron-fluid bg-info mb-5 p-5">
    <h1 class="display-4">Toast Notification Examples in Blazor .NET8</h1>
    <p class="lead">
        see the Video tutorial <a href="https://youtu.be/yG_sY-CDvXY">here</a>
    </p>
    <p class="lead">
        For The Source Code Check The <a href="https://github.com/stepsteptech">GitHub</a> Repository
    </p>
</div>

<span class="bi bi-house" aria-hidden="true"></span>

<button class="btn btn-success btn-lg" @onclick="ShowSuccessToast">ShowSuccessToast</button>
<button class="btn btn-danger btn-lg" @onclick="ShowErrorToast">ShowErrorToast</button>

@code
{
    public async Task ShowSuccessToast()
    {

        //put your logic here

        await _js.ToastrSuccess("Hello from success toast message");

    }
    public async Task ShowErrorToast()
    {
        //put your logic here

        await _js.ToastrError("Hello from Error Toast Message");

    }
}